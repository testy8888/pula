pipeline {
     agent none

    stages {
        stage('test') {
            agent {label 'jwork'}
            steps {
                sh 'sudo cat /var/log/messages'
                sh 'sh /tmp/jenki.sh'
                sh '/tmp/test'
            }
        }
        stage('test4') {
            agent {label 'jwork5'}
            steps {
                echo 'test'
            }
     }
}
      post {
        changed {
            script {
                if (currentBuild.currentResult == 'SUCCESS') {
                echo 'success'
                                }
            }
        }
    }
   
}
   
