pipeline {
     agent none
      environment {
        DISABLE_AUTH = 'true'
        DB_ENGINE    = 'sqlite'
        TEST='pila'
    }

    stages {
        stage('test') {
            agent{label 'jwork'}
            steps {
                sh 'sudo cat /var/log/messages'
                sh 'sh /tmp/jenki.sh'
                sh '/tmp/test'
                echo "Database engine is ${DB_ENGINE}"
                echo "DISABLE_AUTH is ${DISABLE_AUTH}"
                sh 'printenv'
                echo env.TEST
            }
        }
        stage('test4') {
            agent{label 'jwork5'} 
            steps {
                echo 'test'
            }
     }
}
      post {
        changed {
            script {
                if (currentBuild.currentResult == 'SUCCESS') {
                emailext( body: 'test', subject: 'test', to: 'root')
                                }
            }
        }
    }
   
}
   
